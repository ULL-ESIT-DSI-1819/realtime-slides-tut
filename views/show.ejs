<!DOCTYPE html>
<html>
<head>
  <title>Realtime Slides Tutorial | Show</title>
  <script src="/socket.io/socket.io.js"></script>
  <style type="text/css">

    body {
      background-color: #f1f2f6;
      color: #222f3e;
      font-family: 'Helvetica', 'Arial', sans-serif;
    }

    h1, h2, h3, h4, h5, p {
      margin-bottom: 0px;
    }

    #slide {
      margin: auto;
      height: 50%;
      width: 70%;
      position: fixed;
      top:0;
      bottom:0;
      left:0;
      right:0;
      text-align: center;
      font-size: 5vmin;
      display: inline-block;
    }

  </style>
</head>
<body>
  <div id="slide">
    <h1>Realtime Slides ⏱</h1>
    <p>Improvise your presentations, one slide at a time.</p>
  </div>

  <script type="text/javascript">

    const socket = io();

    const slides = {
      interval: null,
      slideIndex: 0,
      data: [
        "<h1>Realtime Slides ⏱</h1><p>Improvise your presentations, one slide at a time.</p>",
        "<h1>Clever Libraries 🛠 </h1><p>Powered by Express.js, Socket.io, Showdown and some sweet Vanilla JS</p>",
        "<h1>Have Some Fun! 🎉</h1><p>Fork this project and experiment with the realtime logic.</p>",
        "<h1>👉 @nafeu</h1><p>Follow me at <strong>github.com/nafeu</strong> for more realtime tomfoolery.</p>"
      ],
      getNextSlide: function() {
        if (this.slideIndex == this.data.length - 1) {
          this.slideIndex = 0;
        } else {
          this.slideIndex++;
        }
        return this.data[this.slideIndex];
      }
    }

    socket.on('connect', () => {
      console.log(`[ show.ejs ] Connected with id: ${socket.id}`);
    })

    socket.on('update slide', (data) => {
      console.log(`[ show.ejs ] Update slide: ${data}`);
      updateSlide(data);

      if (slides.interval) {
        clearInterval(slides.interval);
      }
    })

    function updateSlide(html) {
      document.querySelector("#slide").innerHTML = html;
    }

    (() => {
      slides.interval = setInterval(() => {
        updateSlide(slides.getNextSlide());
      }, 4000)
    })();

  </script>
</body>
</html>